<div class="hero-unit">
  <h2>All Rooms</h2>
  <%- linkTo('Create a new Room', addRoomPath, {class: 'btn pull-right'}); %>
</div>

<div id="rooms-list">
<% if (rooms) { %>
<% for (var i = 0, ii = rooms.length; i < ii; i++) { %>
  <div class="row list-item" id="room-<%= rooms[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(rooms[i].name, roomPath(rooms[i].id)); %></h3>
    </div>
    <div class="span4">
      <p class="lead"><span><i class="icon icon-user"></i> <%= rooms[i].players.length; %>/4</span>
      <% if (rooms[i].started) { %>
      	<span class="label label-info">Started</span>
      <% } else { %>
      	<span class="label label-success">Open</span>
      <% }%>
      </p>
    </div>
  </div>
<% } %>
<% } %>
</div>