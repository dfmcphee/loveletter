<div class="row well">
	<div class="span12">
	  <h2 class="name"><%= room.name %></h2>
	  <% if (!room.started && room.creator === player) { %>
	  	<a id="start-game" class="btn btn-info">Start Game</a>
	  <% } %>
	</div>
</div>

<div class="row">
	<div id="alerts" class="span12">
	</div>
</div>

<div class="row">
	<div class="span9">
		<div class="well">
			<div class="row">
				<div class="span12">
					<h2>Table</h2>
				</div>
			</div>
			<div class="row">
				<div id="table" class="span12">
				</div>
			</div>
		</div>
		<div class="well">
			<div class="row">
				<div class="span12">
					<h2>Hand</h2>
				</div>
			</div>
			<div class="row">
				<div id="hand">
				</div>
			</div>
			<div id="hand-controls" class="row" style="display:none">
				<div class="span6">
					<a id="playCard" class="btn">Play Card</a>
				</div>
			</div>
		</div>
	</div>
	<div class="span3">
		<div class="well">
			<div class="row">
				<div class="span12">
					<h2>Players</h2>
				</div>
			</div>
			<div class="row">
				<div id="players" class="span12">
				</div>
			</div>
		</div>
		<div class="well">
			<div class="row">
				<div class="span12">
					<h2>Log</h2>
				</div>
			</div>
			<div class="row">
				<div id="game-log" class="span12">
				</div>
			</div>
		</div>
	</div>
</div>
 
<!-- Guess Card Modal -->
<div id="guess-card-modal" class="modal fade">
  <div class="modal-content">
	  <div class="modal-header">
	    <h3 class="modal-title">Choose a player</h3>
	  </div>
	  <div class="modal-body">
	  	<div class="player-selection"></div>
	  	<div class="card-selection"></div>
	  </div>
	  <div class="modal-footer">
	    <button class="btn btn-primary">Select</button>
	  </div>
  </div>
</div>

<!-- Player Selection Modal -->
<div id="player-selection-modal" class="modal fade">
  <div class="modal-content">
	  <div class="modal-header">
	  	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h3 class="modal-title">Choose a player</h3>
	  </div>
	  <div class="modal-body">
	  	<div class="player-selection"></div>
	  </div>
	  <div class="modal-footer">
	    <button class="btn btn-primary">Select</button>
	  </div>
  </div>
</div>


<script>
	var roomId = "<%= params.id %>";
	var playerId = "<%= player %>";
	var hostname = "<%= geddy.config.hostname %>";
</script>